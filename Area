class Circle {
    double radius;

    Circle() {
        radius = 1.0;
    }

    Circle(double r) {
        radius = r;
    }

    void showArea() {
        double area = 3.14 * radius * radius;
        System.out.println("Area: " + area);
    }
}

public class ConstructorOverloadSimple {
    public static void main(String[] args) {
        Circle c1 = new Circle();
        c1.showArea();

        Circle c2 = new Circle(5.0);
        c2.showArea();
    }
}
